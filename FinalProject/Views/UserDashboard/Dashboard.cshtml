@*@model FinalProject.Models.User*@
@{
    ViewBag.Title = "Dashboard";
}

@if (Session["eId"] != null)
{
    <section class="vh-200" style="background-color: #f4f5f7;">
        <h2 class="text-center mb-2" style="padding-top:50px;">Welcome @Html.ViewData["UserName"]</h2>
        <div class="container py-5 h-150">
            <div class="row d-flex justify-content-center align-items-center h-200">
                <div class="col col-lg-6 mb-4 mb-lg-0">
                    <div class="card mb-3" style="border-radius: .5rem;width:950px;margin-left:-150px">
                        <div class="row g-0">
                            <div class="col-md-4 gradient-custom text-center text-white"
                                 style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                                <img src="@Url.Action("GetImage", "Image", new { imageName = "@Html.ViewData['Uimg']" })" alt="Image" />
                                <img src="@Url.Action("GetImage", "@Html.ViewData['Uimg']", new { imageName = @Html.ViewData["Uimg"] })" alt="Image"
                                     class="img-fluid my-5" style="height: 250px; width:250px;" />

                                <i class="far fa-edit mb-5"></i>
                            </div>
                            <div class="col-md-8">
                                <div class="card-body p-4">
                                    <h6>User Contact</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Email</h6>
                                            @*<p class="text-muted">@Session["eId"].ToString()</p> *@
                                            <p class="text-muted">@Html.ViewData["Email"]</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Phone</h6>
                                            <p class="text-muted">@Html.ViewData["Mobile"]</p>
                                        </div>
                                    </div>
                                    <h6>Personal Details</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>User Name</h6>
                                            <p class="text-muted">@Html.ViewData["UserName"]</p>
                                        </div>
                                        @*<div class="col-6 mb-3">
                                            <h6>Education</h6>
                                            <p class="text-muted">@Html.ViewData["Education"]</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                            <h6>Address</h6>
                                            <p class="text-muted">@Html.ViewData["Address"]</p>
                                        </div> *@
                                    </div>
                                    <a class="btn btn-primary" href="/UserDashboard/edit/@Html.ViewData["Id"]">Edit Profile</a>
                                    <a class="btn btn-danger" href="/admin/logout">LogOut</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

